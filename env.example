# Zesdocs Monorepo Environment Variables
# This file documents all environment variables used across the monorepo
# Copy individual workspace .env.example files to .env files as needed

# =============================================================================
# INFRASTRUCTURE SERVICES
# =============================================================================

# PostgreSQL Database
POSTGRES_DB=zesdocs
POSTGRES_USER=zesdocs
POSTGRES_PASSWORD=zesdocs_dev_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://zesdocs:zesdocs_dev_password@localhost:5432/zesdocs

# Redis Cache & Queue
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Elasticsearch Search Engine
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=zesdocs

# =============================================================================
# APPLICATION SERVICES
# =============================================================================

# API Service (apps/api)
API_PORT=3000
API_URL=http://localhost:3000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
CORS_ORIGIN=http://localhost:3001

# Web App (apps/web)
WEB_PORT=3001
WEB_URL=http://localhost:3001
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this-in-production

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# AI/ML Services
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@zesdocs.com

# Analytics
NEXT_PUBLIC_GA_ID=your-google-analytics-id
MIXPANEL_TOKEN=your-mixpanel-token

# Push Notifications (Mobile)
FCM_SERVER_KEY=your-fcm-server-key
FCM_SENDER_ID=your-fcm-sender-id

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

NODE_ENV=development
LOG_LEVEL=info
DEBUG_MODE=false
ENABLE_ANALYTICS=false
