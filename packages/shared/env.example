# Zesdocs Shared Package Environment Variables
# This package typically doesn't need environment variables,
# but these can be used for shared configuration

# API Configuration
API_BASE_URL=http://localhost:3000
API_TIMEOUT=30000

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_DEBUG=false
ENABLE_OFFLINE_MODE=true

# Validation
MAX_URL_LENGTH=2048
MAX_TITLE_LENGTH=255
MAX_DESCRIPTION_LENGTH=1000
MAX_TAGS_COUNT=10

# Default Values
DEFAULT_PAGE_SIZE=20
DEFAULT_SORT_ORDER=createdAt
DEFAULT_SORT_DIRECTION=desc

# Cache Configuration
CACHE_TTL=300000
CACHE_MAX_SIZE=1000
