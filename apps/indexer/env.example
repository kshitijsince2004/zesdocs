# Zesdocs Indexer Environment Variables
# Copy this file to .env and update values as needed

# Application Configuration
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://zesdocs:zesdocs_dev_password@localhost:5432/zesdocs
POSTGRES_DB=zesdocs
POSTGRES_USER=zesdocs
POSTGRES_PASSWORD=zesdocs_dev_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=zesdocs

# Queue Configuration
QUEUE_NAME=index-links
QUEUE_CONCURRENCY=5
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000

# Web Scraping Configuration
USER_AGENT=ZesdocsBot/1.0 (+https://zesdocs.com/bot)
REQUEST_TIMEOUT=30000
MAX_RETRIES=3
RETRY_DELAY=1000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Content Processing
MAX_CONTENT_LENGTH=1000000
EXTRACT_IMAGES=true
EXTRACT_VIDEOS=false
EXTRACT_AUDIO=false

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key
EMBEDDING_MODEL=text-embedding-ada-002
MAX_EMBEDDING_LENGTH=8000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
