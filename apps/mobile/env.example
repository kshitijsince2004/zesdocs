# Zesdocs Mobile App Environment Variables
# Copy this file to .env and update values as needed

# Application Configuration
NODE_ENV=development
APP_NAME=Zesdocs
APP_VERSION=1.0.0

# API Configuration
API_URL=http://localhost:3000
API_TIMEOUT=30000

# Authentication
AUTH_ENDPOINT=http://localhost:3000/auth
TOKEN_STORAGE_KEY=zesdocs_token
REFRESH_TOKEN_STORAGE_KEY=zesdocs_refresh_token

# Features
ENABLE_OFFLINE_SYNC=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_QR_SCANNER=true
ENABLE_VOICE_INPUT=true

# Storage
ASYNC_STORAGE_KEY_PREFIX=zesdocs_
QUEUE_STORAGE_KEY=offline_queue
SETTINGS_STORAGE_KEY=app_settings

# Camera/Media
CAMERA_QUALITY=0.8
MAX_IMAGE_SIZE=2048
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
FCM_SENDER_ID=your-fcm-sender-id

# Analytics
ANALYTICS_ENABLED=false
MIXPANEL_TOKEN=your-mixpanel-token

# Debug
DEBUG_MODE=false
LOG_LEVEL=info
ENABLE_FLIPPER=false
