# Zesdocs Browser Extension Environment Variables
# Copy this file to .env and update values as needed

# API Configuration
VITE_API_URL=http://localhost:3000
VITE_WEB_URL=http://localhost:3001

# Extension Configuration
VITE_EXTENSION_NAME=Zesdocs
VITE_EXTENSION_VERSION=1.0.0

# Authentication
VITE_AUTH_ENDPOINT=http://localhost:3000/auth
VITE_TOKEN_STORAGE_KEY=zesdocs_token

# Features
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_AUTO_TAG=true
VITE_ENABLE_NOTIFICATIONS=true

# Storage
VITE_QUEUE_STORAGE_KEY=zesdocs_queue
VITE_SETTINGS_STORAGE_KEY=zesdocs_settings

# UI Configuration
VITE_POPUP_WIDTH=350
VITE_POPUP_HEIGHT=500
VITE_THEME=light

# Debug
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info
